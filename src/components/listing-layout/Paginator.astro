---
import type { PaginationLink } from "@/types";
import Icon from "@/components/ui/Icon.astro";

interface Props {
	prevUrl?: PaginationLink;
	nextUrl?: PaginationLink;
}

const { prevUrl, nextUrl } = Astro.props;
---

{
	(prevUrl || nextUrl) && (
		<nav class="pagination-nav">
			{prevUrl && (
				<a class="prev-link inline-flex items-center gap-1" href={prevUrl.url} data-astro-prefetch>
					{prevUrl.srLabel && <span class="sr-only">{prevUrl.srLabel}</span>}
					<Icon class="h-5 w-5" name={"before"} aria-hidden="true" focusable="false" />
					{prevUrl.text ? prevUrl.text : "Previous"}
				</a>
			)}
			{nextUrl && (
				<a class="next-link inline-flex items-center gap-1" href={nextUrl.url} data-astro-prefetch>
					{nextUrl.srLabel && <span class="sr-only">{nextUrl.srLabel}</span>}
					{nextUrl.text ? nextUrl.text : "Next"}
					<Icon class="h-5 w-5" name={"next"} aria-hidden="true" focusable="false" />
				</a>
			)}
		</nav>
	)
}
